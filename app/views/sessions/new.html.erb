<h1>ログイン</h1>

<%= form_with url: login_path, local: true do |f| %>
  <div>
    <%= label_tag :email, 'メールアドレス' %>
    <%= email_field_tag :email %>
  </div>
  <div>
    <%= label_tag :password, 'パスワード' %>
    <%= password_field_tag :password %>
  </div>
  <div>
    <label>
      <%= check_box_tag :remember_me, '1' %> ログイン状態を保持する
    </label>
  </div>
  <div>
    <%= submit_tag 'ログイン' %>
  </div>
<% end %>
