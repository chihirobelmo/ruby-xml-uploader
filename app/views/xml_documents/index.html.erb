<%# encoding: UTF-8 %>
<!-- app/views/xml_documents/index.html.erb -->
<h1>XML Files</h1>

<table>
  <thead>
    <tr>
  <th>Title</th>
  <th>Description</th>
  <th>Device Name</th>
  <th>Uploaded By</th>
  <th>Downloads</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @xml_documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.description %></td>
  <td><%= document.device_name %></td>
  <td><%= document.user&.username || document.user&.email || "-" %></td>
  <td><%= @download_counts[document.id] || 0 %></td>
  <td><%= link_to 'Show', document %></td>
  <td><%= link_to 'Download', download_xml_document_path(document) %></td>
  <td><%= link_to 'Edit', edit_xml_document_path(document) %></td>
  <td><%= link_to 'Delete', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Upload New XML', new_xml_document_path %>
<% else %>
  <p>Please log in to upload files.</p>
<% end %>